<p id="notice"><%= notice %></p>

<h1>Quizzes</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Description</th>
      <th>Answers</th>
      <th>Multiple correct answers</th>
      <th>Correct answers</th>
      <th>Correct answer</th>
      <th>Explanation</th>
      <th>Tip</th>
      <th>Tags</th>
      <th>Category</th>
      <th>Difficulty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.question %></td>
        <td><%= quiz.description %></td>
        <td><%= quiz.answers %></td>
        <td><%= quiz.multiple_correct_answers %></td>
        <td><%= quiz.correct_answers %></td>
        <td><%= quiz.correct_answer %></td>
        <td><%= quiz.explanation %></td>
        <td><%= quiz.tip %></td>
        <td><%= quiz.tags %></td>
        <td><%= quiz.category %></td>
        <td><%= quiz.difficulty %></td>
        <td><%= link_to 'Show', quiz %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quiz', new_quiz_path %>
